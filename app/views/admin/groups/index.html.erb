<div class="pull-right">
   <%= link_to("新增讨论", new_group_path, :class => "btn btn-default" ) %>
</div>

<br><br>

<table class="table table-boldered">
    <% @groups.each do |group| %>
    <tr>
      <td>
        <%= link_to(group.title, admin_group_path(group)) %>
      </td>
      <td>
        <%= link_to("编辑", edit_admin_group_path(group)) %> |
        <%= link_to("删除", admin_group_path(group), :method => :delete, :data => { :confirm => "确定删除么？"}) %>
      </td>
      <td>
        <%= group.created_at %>
      </td>
    </tr>
    <% end %>
</table>
